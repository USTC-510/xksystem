<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5" vgap="5" xmlns:fx="http://javafx.com/fxml">
    <!-- 设置内边距 -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <!-- 列约束 -->
    <columnConstraints>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="15"/>
    </columnConstraints>
    <!-- 行约束 -->
    <rowConstraints>
        <RowConstraints percentHeight="25"/>
        <RowConstraints percentHeight="15"/>
        <RowConstraints percentHeight="15"/>
        <RowConstraints percentHeight="25"/>
        <RowConstraints percentHeight="20"/>
    </rowConstraints>
    <!-- 标题标签 -->
    <Label text="学生选课系统" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="5" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-alignment: center;"/>

    <!-- 用户名标签 -->
    <Label text="用户名:" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="nameInput" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="2"
               GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
    <!-- 密码标签 -->
    <Label text="密码:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passInput" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="2"
                   GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
    <!-- 登录按钮 -->
    <Button text="登录" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
</GridPane>
